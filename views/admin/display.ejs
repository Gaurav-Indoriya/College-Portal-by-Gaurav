<%- include('../header.ejs') %>

<br><br>
<h1 class="bg-info text-center mt-5">Admin Panel</h1>

<% if(message.length> 0){ %>
    <div class="alert alert-danger">
        <!--To Print-->
        <%= message %>
      </div>      
<% } %>
<% if(message1.length> 0){ %>
    <div class="alert alert-success">
        <!--To Print-->
        <%= message1 %>
      </div>      
<% } %>

<% if(message2.length> 0){ %>
    <div class="alert alert-success">
        <!--To Print-->
        <%= message2 %>
      </div>      
<% } %>
    
<br><br>
<div class="container">
    <table class="table table-bordered text-center">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Course</th>
                <th>Status</th>
                <th>Comment</th>
                <th colspan="5">Action</th>
            </tr>
        </thead>
        <tbody>
            <% c.forEach((item) => { %>
                <tr>
                    <td><%= item._id %></td>
                    <td><%= item.name %></td>
                    <td><%= item.email %></td>
                    <td><%= item.course %></td>
                    <td><%= item.status %></td>
                    <td>
                        <form action="/updateStatus/<%= item._id %>" method="post">
                            <textarea name="comment" class="form-control"></textarea>
                            <input type="hidden" name="name" value="<%= item.name %>">
                            <input type="hidden" name="course" value="<%= item.course %>">
                            <input type="hidden" name="email" value="<%= item.email %>">
                    </td>
                    <td><button type="submit" name="status" class="btn btn-success" value="Approved">Approve</button></td>
                    <td><button type="submit" name="status" class="btn btn-danger" value="Rejected">Reject</button></td>
                        </form>
                    <td>
                        <a href="courseView/<%= item._id %>" class="btn btn-primary">View</a>
                    </td>
                    <td>
                        <a href="/courseEdit/<%= item._id %>" class="btn btn-info">Edit</a>
                    </td>
                    <td>
                        <a href="/courseDelete/<%= item._id %>" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<%- include('../footer.ejs') %>
