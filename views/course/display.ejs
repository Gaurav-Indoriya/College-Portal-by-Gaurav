<%- include('../header.ejs') %>

    <br><br>
    <h1 class="bg-info text-center mt-5">Course Display</h1>

    <% if(message.length> 0){ %>
        <div class="alert alert-success">
            <!--To Print-->
            <%= message %>
          </div>      
    <% } %>

    <% if(message2.length> 0){ %>
        <div class="alert alert-success">
            <!--To Print-->
            <%= message2 %>
          </div>      
    <% } %>

    <div class="container">
        <table class="table table-bordered text-center">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Course</th>
                    <th>Status</th>
                    <th>Comment</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% c.forEach((item)=>{ %>
                    <tr>
                        <td>
                            <%= item._id %>
                        </td>
                        <td>
                            <%= item.name %>
                        </td>
                        <td>
                            <%= item.email %>
                        </td>
                        <td>
                            <%= item.course %>
                        </td>
                        <td>
                            <%= item.status %>
                        </td>
                        <td>
                            <%= item.comment %>
                        </td>
                        <td>
                            <a href="/courseView/<%= item._id %>" class="btn btn-info">View</a>
                            <a href="/courseEdit/<%= item._id %>" class="btn btn-success">Edit</a>
                            <a href="/courseDelete/<%= item._id %>"class="btn btn-danger">Delete</a>
                        </td>
                    </tr>


                    <% }) %>
            </tbody>

        </table>

    </div>
    <%- include('../footer.ejs') %>